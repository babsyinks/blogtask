<%//  The JS SDK Login Button %>
<%//<button onclick="FB.login(function(response){checkLoginState()});">FaceBook Login</button>%>
<div class="wrapper">
<div class="wrapInput signIn">
  <h1>Log In</h1>
<div class = 'center'>
<form action="/signIn" method="POST">
<div class="lab_inp">
  <label for = "signIn_username">UserName:</label> <input type="text" name="username" placeholder="Enter Registered Email"/>
</div>
<div class="lab_inp">
  <label for = "signIn_password">Password:</label> <input type="password" name="password" placeholder="Enter Password"/>
</div>
<input type="submit" value = "Log In"/>
</form>
</div>
</div>

<p class="center validation"><%= validateSignIn %></p>


<h2>OR</h2>

<div class="fb_wrapper">
  <a href="/auth/facebook" class="fb btn">
    <i class="fa fa-facebook fa-fw"></i> Login with Facebook
  </a>
</div>

<h2>Don't have an account?</h2>

<div class="wrapInput register">
<h1>Register</h1>

<div class="center register_group">
<form action="/register" method="POST">
  <div class="lab_inp">
    <label for="email">Email:</label><input type="email" name="username" placeholder="Enter Email address."/>
  </div>
  <div class="lab_inp">
    <label for="password">Password:</label><input type="password" name="password" placeholder="Enter Password."/>
  </div>
  <div class="lab_inp">
    <label for="password_again">Password Again:</label><input type="password" name="password_again" placeholder="Re-enter Password"/>
  </div>
<input type="submit" value="Register"/>
</form>
</div>

</div>


<p class="center validation"><%= validation %></p>
</div>
